# Test JSON Functions with COMPLEX type
# Grammar: JSON_OBJECT, JSON_ARRAY ...

--source include/villagesql/install_complex_extension.inc

CREATE TABLE t1 (val COMPLEX);
INSERT INTO t1 VALUES ('(1.0,2.0)');

# JSON_OBJECT with complex value - not supported
--error ER_WRONG_USAGE
SELECT JSON_OBJECT('key', val) FROM t1;

# JSON_ARRAY with complex value - not supported
--error ER_WRONG_USAGE
SELECT JSON_ARRAY(val, val) FROM t1;

# Explicit CAST workaround also fails (CAST from COMPLEX not supported)
--error ER_WRONG_USAGE
SELECT JSON_OBJECT('key', CAST(val AS CHAR)) FROM t1;

--error ER_WRONG_USAGE
SELECT JSON_ARRAY(CAST(val AS CHAR), CAST(val AS CHAR)) FROM t1;

DROP TABLE t1;

--source include/villagesql/uninstall_complex_extension.inc
