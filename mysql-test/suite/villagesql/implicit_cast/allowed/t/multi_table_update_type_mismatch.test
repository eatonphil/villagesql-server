# Test multi-table UPDATE with mixed types

--source include/villagesql/install_complex_extension.inc

CREATE TABLE t_complex (id INT PRIMARY KEY, val COMPLEX NOT NULL);
CREATE TABLE t_string (id INT, val VARCHAR(100));

INSERT INTO t_complex VALUES (1, '(1.0,2.0)');
INSERT INTO t_string VALUES (1, 'string_value');

# Implicit cast from VARCHAR field to COMPLEX is now allowed, but encoding
# fails when the value is not a valid COMPLEX format
--error ER_TRUNCATED_WRONG_VALUE_FOR_FIELD
UPDATE t_complex c, t_string s SET c.val = s.val WHERE c.id = s.id;

DROP TABLE t_complex;
DROP TABLE t_string;

--source include/villagesql/uninstall_complex_extension.inc
