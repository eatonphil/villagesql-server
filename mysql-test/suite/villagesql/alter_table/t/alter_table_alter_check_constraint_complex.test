# Test ALTER TABLE ALTER CHECK constraint enforcement on COMPLEX column
# Grammar: ALTER TABLE table_name ALTER CHECK constraint_name ENFORCED/NOT ENFORCED

--source include/villagesql/not_implemented_complex_type.inc

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    value COMPLEX,
    CONSTRAINT chk_complex CHECK (REAL(value) >= 0)
);

INSERT INTO t1 VALUES (1, 'test1', '(1.0,2.0)');

# This should fail due to constraint
--error ER_CHECK_CONSTRAINT_VIOLATED
INSERT INTO t1 VALUES (2, 'test2', '(-1.0,2.0)');

SHOW CREATE TABLE t1;

# Disable constraint enforcement
ALTER TABLE t1 ALTER CHECK chk_complex NOT ENFORCED;

SHOW CREATE TABLE t1;

# Now this should succeed
INSERT INTO t1 VALUES (2, 'test2', '(-1.0,2.0)');

# Re-enable constraint enforcement
ALTER TABLE t1 ALTER CHECK chk_complex ENFORCED;

SHOW CREATE TABLE t1;

SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
