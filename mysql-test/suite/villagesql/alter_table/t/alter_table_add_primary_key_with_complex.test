# Test ALTER TABLE ADD PRIMARY KEY alongside COMPLEX columns
# Grammar: ALTER TABLE table_name ADD PRIMARY KEY (col_list)

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT,
    name VARCHAR(50),
    value COMPLEX
);

INSERT INTO t1 VALUES (1, 'test1', '(1.0,2.0)');
INSERT INTO t1 VALUES (2, 'test2', '(3.5,-1.2)');

SHOW CREATE TABLE t1;

# Add primary key
ALTER TABLE t1 ADD PRIMARY KEY (id);

SHOW CREATE TABLE t1;

# Test primary key constraint - should fail
--error ER_DUP_ENTRY
INSERT INTO t1 VALUES (1, 'duplicate', '(5.0,6.0)');

# This should succeed
INSERT INTO t1 VALUES (3, 'test3', '(2.5,1.5)');

SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
