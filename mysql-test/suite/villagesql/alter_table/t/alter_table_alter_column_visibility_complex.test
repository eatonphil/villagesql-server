# Test ALTER TABLE ALTER COLUMN SET INVISIBLE/VISIBLE on COMPLEX column
# Grammar: ALTER TABLE table_name ALTER COLUMN col_name SET INVISIBLE/VISIBLE

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    value COMPLEX
);

INSERT INTO t1 VALUES (1, 'test1', '(1.0,2.0)');
INSERT INTO t1 VALUES (2, 'test2', '(3.5,-1.2)');

SHOW CREATE TABLE t1;
SELECT * FROM t1;

# Make COMPLEX column invisible
ALTER TABLE t1 ALTER COLUMN value SET INVISIBLE;

SHOW CREATE TABLE t1;
SELECT * FROM t1;

# Make COMPLEX column visible again
ALTER TABLE t1 ALTER COLUMN value SET VISIBLE;

SHOW CREATE TABLE t1;
SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
