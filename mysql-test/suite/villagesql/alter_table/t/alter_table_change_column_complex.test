# Test ALTER TABLE CHANGE COLUMN with COMPLEX type
# Grammar: ALTER TABLE table_name CHANGE old_col_name new_col_name COMPLEX

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    old_value VARCHAR(50)
);

--source include/villagesql/query_custom_columns.inc

INSERT INTO t1 VALUES (1, 'test_data');

SHOW CREATE TABLE t1;

ALTER TABLE t1 CHANGE old_value new_complex_value COMPLEX;

--source include/villagesql/query_custom_columns.inc

SHOW CREATE TABLE t1;

UPDATE t1 SET new_complex_value = '(1.0,2.0)' WHERE id = 1;
INSERT INTO t1 VALUES (2, '(3.5,-1.2)');

SELECT * FROM t1;

# Test modifying a COMPLEX column from NULL to NOT NULL
# This specifically tests the bug where custom type info was lost during MODIFY

--echo # Test MODIFY COLUMN: change COMPLEX from NULL to NOT NULL
ALTER TABLE t1 MODIFY new_complex_value COMPLEX NOT NULL;

--source include/villagesql/query_custom_columns.inc

SHOW CREATE TABLE t1;

SELECT * FROM t1;

--echo # Test CHANGE COLUMN: rename while keeping COMPLEX NOT NULL
ALTER TABLE t1 CHANGE new_complex_value renamed_complex COMPLEX NOT NULL;

--source include/villagesql/query_custom_columns.inc

SHOW CREATE TABLE t1;

SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/query_custom_columns.inc

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
