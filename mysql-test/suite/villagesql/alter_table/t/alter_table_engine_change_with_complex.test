# Test ALTER TABLE ENGINE validation with COMPLEX columns
# Grammar: ALTER TABLE table_name ENGINE=engine_name
# COMPLEX types only work with InnoDB - changing to MyISAM should fail

--source include/villagesql/not_implemented_complex_type.inc

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    value COMPLEX
) ENGINE=InnoDB;

INSERT INTO t1 VALUES (1, 'test1', '(1.0,2.0)');
INSERT INTO t1 VALUES (2, 'test2', '(3.5,-1.2)');

SHOW CREATE TABLE t1;
SELECT * FROM t1;

# Attempt to change engine to MyISAM - should fail
--error ER_UNSUPPORTED_EXTENSION
ALTER TABLE t1 ENGINE=MyISAM;

SHOW CREATE TABLE t1;

# Table should remain InnoDB with data intact
SELECT * FROM t1;

# Changing to another InnoDB-compatible engine should work (if supported)
# This should succeed since we're staying with InnoDB
ALTER TABLE t1 ENGINE=InnoDB;

SHOW CREATE TABLE t1;
SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
