# Test ALTER TABLE ALTER COLUMN DROP DEFAULT on COMPLEX column
# Grammar: ALTER TABLE table_name ALTER COLUMN col_name DROP DEFAULT

--source include/villagesql/not_implemented_complex_type.inc

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    value COMPLEX DEFAULT '(1.0,1.0)'
);

INSERT INTO t1 (id) VALUES (1);

SHOW CREATE TABLE t1;
SELECT * FROM t1;

ALTER TABLE t1 ALTER COLUMN value DROP DEFAULT;

SHOW CREATE TABLE t1;

# New rows should now require explicit value or get NULL
INSERT INTO t1 (id) VALUES (2);
INSERT INTO t1 VALUES (3, '(2.0,3.0)');

SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
