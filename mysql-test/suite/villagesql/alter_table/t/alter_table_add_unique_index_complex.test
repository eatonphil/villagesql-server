# Test ALTER TABLE ADD UNIQUE INDEX on COMPLEX column
# Grammar: ALTER TABLE table_name ADD UNIQUE INDEX index_name (complex_col)

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    value COMPLEX
);

INSERT INTO t1 VALUES (1, 'test1', '(1.0,2.0)');
INSERT INTO t1 VALUES (2, 'test2', '(3.5,-1.2)');

SHOW CREATE TABLE t1;

# Add unique index on COMPLEX column
ALTER TABLE t1 ADD UNIQUE INDEX idx_unique_complex (value);

SHOW CREATE TABLE t1;

# Test uniqueness constraint
INSERT INTO t1 VALUES (3, 'test3', '(2.0,1.0)');

# This should fail due to duplicate
--error ER_DUP_ENTRY
INSERT INTO t1 VALUES (4, 'test4', '(1.0,2.0)');

SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
