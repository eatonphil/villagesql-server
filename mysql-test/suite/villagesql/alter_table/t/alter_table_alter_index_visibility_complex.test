# Test ALTER TABLE ALTER INDEX SET INVISIBLE/VISIBLE on COMPLEX index
# Grammar: ALTER TABLE table_name ALTER INDEX index_name INVISIBLE/VISIBLE

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    value COMPLEX,
    INDEX idx_complex (value)
);

INSERT INTO t1 VALUES (1, 'test1', '(1.0,2.0)');
INSERT INTO t1 VALUES (2, 'test2', '(3.5,-1.2)');

SHOW CREATE TABLE t1;
--replace_column 7 #
SHOW INDEX FROM t1;

# Make index invisible
ALTER TABLE t1 ALTER INDEX idx_complex INVISIBLE;

SHOW CREATE TABLE t1;
--replace_column 7 #
SHOW INDEX FROM t1;

# Make index visible again
ALTER TABLE t1 ALTER INDEX idx_complex VISIBLE;

SHOW CREATE TABLE t1;
--replace_column 7 #
SHOW INDEX FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
