# Test ALTER TABLE ADD COLUMN FIRST with COMPLEX type
# Grammar: ALTER TABLE table_name ADD COLUMN col_name COMPLEX FIRST

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    name VARCHAR(50)
);

INSERT INTO t1 VALUES (1, 'test1');

SHOW CREATE TABLE t1;

ALTER TABLE t1 ADD COLUMN complex_val COMPLEX FIRST;

SHOW CREATE TABLE t1;

UPDATE t1 SET complex_val = '(1.0,2.0)' WHERE id = 1;
INSERT INTO t1 VALUES ('(3.5,-1.2)', 2, 'test2');

SELECT * FROM t1;

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
