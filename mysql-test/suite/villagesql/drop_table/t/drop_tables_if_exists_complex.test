# Test DROP TABLES IF EXISTS with COMPLEX columns
# Grammar: DROP TABLES IF EXISTS table_list

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    value COMPLEX
);

CREATE TABLE t2 (
    id INT PRIMARY KEY,
    data COMPLEX
);

INSERT INTO t1 VALUES (1, '(1.0,2.0)');
INSERT INTO t2 VALUES (1, '(3.0,4.0)');

# Drop existing tables
DROP TABLES IF EXISTS t1, t2;

# Drop non-existing tables (should not error)
DROP TABLES IF EXISTS t1, t2, t3;

# Verify tables no longer exist
SHOW TABLES LIKE 't_';

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
