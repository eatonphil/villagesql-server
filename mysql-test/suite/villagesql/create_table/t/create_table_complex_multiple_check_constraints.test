# Test CREATE TABLE with multiple CHECK constraints on different COMPLEX columns
# Tests CHECK constraints across multiple COMPLEX columns with various functions

--source include/villagesql/not_implemented_complex_type.inc

--source include/villagesql/install_complex_extension.inc
--source include/villagesql/binlog_check_begin.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    input_signal COMPLEX,
    output_signal COMPLEX,
    CHECK (ABS(input_signal) <= 100.0),
    CHECK (ABS(output_signal) <= 200.0),
    CHECK (REAL(input_signal) >= 0.0),
    CHECK (IMAG(output_signal) BETWEEN -50.0 AND 50.0)
);

SHOW CREATE TABLE t1;

# Insert valid data
INSERT INTO t1 VALUES (1, '(10.0,20.0)', '(50.0,30.0)');
INSERT INTO t1 VALUES (2, '(5.0,0.0)', '(100.0,-25.0)');

SELECT * FROM t1;

# Test constraint violations on input_signal
--error ER_CHECK_CONSTRAINT_VIOLATED
INSERT INTO t1 VALUES (3, '(200.0,0.0)', '(10.0,10.0)'); # input ABS > 100

--error ER_CHECK_CONSTRAINT_VIOLATED
INSERT INTO t1 VALUES (4, '(-5.0,10.0)', '(20.0,20.0)'); # input REAL < 0

# Test constraint violations on output_signal
--error ER_CHECK_CONSTRAINT_VIOLATED
INSERT INTO t1 VALUES (5, '(10.0,10.0)', '(300.0,0.0)'); # output ABS > 200

--error ER_CHECK_CONSTRAINT_VIOLATED
INSERT INTO t1 VALUES (6, '(5.0,5.0)', '(50.0,100.0)'); # output IMAG > 50

DROP TABLE t1;

--source include/villagesql/binlog_check_end.inc
--source include/villagesql/uninstall_complex_extension.inc
