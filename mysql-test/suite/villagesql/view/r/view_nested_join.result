CREATE VIEW v1 AS
SELECT id, val, amount FROM t1;
CREATE VIEW v2 AS
SELECT id, val, description FROM t2;
CREATE VIEW v_joined AS
SELECT v1.id, v1.val, v1.amount, v2.description
FROM v1
LEFT JOIN v2 ON v1.val = v2.val;
