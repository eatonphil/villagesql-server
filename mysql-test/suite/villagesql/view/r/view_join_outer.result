CREATE VIEW v_left_join AS
SELECT t1.id AS t1_id, t1.val, t1.description, t2.id AS t2_id, t2.category
FROM t1 LEFT JOIN t2 ON t1.val = t2.val;
SELECT * FROM v_left_join ORDER BY t1_id;
