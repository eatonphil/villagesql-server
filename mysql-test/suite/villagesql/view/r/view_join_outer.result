CREATE VIEW v_right_join AS
SELECT t1.id AS t1_id, t1.val AS t1_val, t2.id AS t2_id, t2.val AS t2_val, t2.category
FROM t1 RIGHT JOIN t2 ON t1.val = t2.val;
SELECT * FROM v_right_join ORDER BY t2_id;
