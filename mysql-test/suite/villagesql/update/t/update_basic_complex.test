# Test UPDATE ... SET ... with COMPLEX type
# Grammar: UPDATE [LOW_PRIORITY] [IGNORE] table_reference SET assignment_list ...

--source include/villagesql/install_complex_extension.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    val COMPLEX
);

# Insert 10 rows with varied values including zero variants
INSERT INTO t1 VALUES
    (1, '(1.0,2.0)'),
    (2, '(0,0)'),
    (3, '(-3.5,4.5)'),
    (4, '(-0,0)'),
    (5, '(5.0,-6.0)'),
    (6, '(0,-0)'),
    (7, '(-7.5,-8.5)'),
    (8, '(-0,-0)'),
    (9, '(9.0,10.0)'),
    (10, '(0,0)');

# Update a single row
UPDATE t1 SET val = '(100.0,200.0)' WHERE id = 1;

SELECT * FROM t1 ORDER BY id;

# Update a zero variant row
UPDATE t1 SET val = '(11.0,12.0)' WHERE id = 2;

SELECT * FROM t1 ORDER BY id;

# Update multiple rows at once
UPDATE t1 SET val = '(99.0,99.0)' WHERE id IN (3, 5, 7);

SELECT * FROM t1 ORDER BY id;

# Update with negative values
UPDATE t1 SET val = '(-50.0,-60.0)' WHERE id = 9;

SELECT * FROM t1 ORDER BY id;

# Update all zero variants using WHERE val = '(0,0)'
# This should match all zero representations: (0,0), (-0,0), (0,-0), (-0,-0)
UPDATE t1 SET val = '(88.0,88.0)' WHERE val = '(0,0)';

SELECT * FROM t1 ORDER BY id;

DROP TABLE t1;

--source include/villagesql/uninstall_complex_extension.inc
