# Test UPDATE ... ORDER BY ... LIMIT ... with COMPLEX type
# Grammar: UPDATE ... ORDER BY ... LIMIT ...

--source include/villagesql/install_complex_extension.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    val COMPLEX
);

# Insert 10 rows with zero variants
INSERT INTO t1 VALUES
    (1, '(1.0,2.0)'),
    (2, '(0,0)'),
    (3, '(-3.5,4.5)'),
    (4, '(-0,0)'),
    (5, '(5.0,-6.0)'),
    (6, '(0,-0)'),
    (7, '(-7.5,-8.5)'),
    (8, '(-0,-0)'),
    (9, '(9.0,10.0)'),
    (10, '(0,0)');

# Update first 3 rows by id
UPDATE t1 SET val = '(100.0,100.0)' ORDER BY id ASC LIMIT 3;

SELECT * FROM t1 ORDER BY id;

# Update last 2 rows by id
UPDATE t1 SET val = '(200.0,200.0)' ORDER BY id DESC LIMIT 2;

SELECT * FROM t1 ORDER BY id;

# Update 4 rows starting from a specific point
UPDATE t1 SET val = '(50.0,50.0)' WHERE id >= 4 ORDER BY id ASC LIMIT 4;

SELECT * FROM t1 ORDER BY id;

DROP TABLE t1;

--source include/villagesql/uninstall_complex_extension.inc
