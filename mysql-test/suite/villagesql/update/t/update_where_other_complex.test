# Test UPDATE ... WHERE other_col = ... affecting COMPLEX type
# Grammar: UPDATE ... WHERE ...

--source include/villagesql/install_complex_extension.inc

CREATE TABLE t1 (
    id INT PRIMARY KEY,
    val COMPLEX
);

# Insert 10 rows with varied values including zero variants
INSERT INTO t1 VALUES
    (1, '(1.0,2.0)'),
    (2, '(0,0)'),
    (3, '(-3.5,4.5)'),
    (4, '(-0,0)'),
    (5, '(5.0,-6.0)'),
    (6, '(0,-0)'),
    (7, '(-7.5,-8.5)'),
    (8, '(-0,-0)'),
    (9, '(9.0,10.0)'),
    (10, '(0,0)');

# Update based on id equality
UPDATE t1 SET val = '(100.0,200.0)' WHERE id = 2;

SELECT * FROM t1 ORDER BY id;

# Update based on id comparison
UPDATE t1 SET val = '(50.0,60.0)' WHERE id > 8;

SELECT * FROM t1 ORDER BY id;

# Update based on id range
UPDATE t1 SET val = '(-99.0,-99.0)' WHERE id BETWEEN 4 AND 6;

SELECT * FROM t1 ORDER BY id;

# Update based on id IN list
UPDATE t1 SET val = '(77.0,88.0)' WHERE id IN (1, 3, 7);

SELECT * FROM t1 ORDER BY id;

DROP TABLE t1;

--source include/villagesql/uninstall_complex_extension.inc
