#ifndef VILLAGESQL_INCLUDE_VERSION_H_
#define VILLAGESQL_INCLUDE_VERSION_H_

#include <string>
#include <vector>

#include "villagesql/include/semver.h"

#define VSQL_MAJOR_VERSION          @VSQL_MAJOR_VERSION@
#define VSQL_MINOR_VERSION          @VSQL_MINOR_VERSION@
#define VSQL_PATCH_VERSION          @VSQL_PATCH_VERSION@
#define VSQL_PRE_RELEASE_VERSION    "@VSQL_PRE_RELEASE_VERSION@"

namespace villagesql {

inline Semver GetBuildVersion() { return Semver::from_components(
    VSQL_MAJOR_VERSION,
    VSQL_MINOR_VERSION,
    VSQL_PATCH_VERSION,
    std::vector<std::string>{ VSQL_PRE_RELEASE_VERSION });
}

}  // namespace villagesql

#endif /* VILLAGESQL_INCLUDE_VERSION_H_ */
